  <script>
    function logout() {
      document.cookie = "pcs=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
      location.href = "/";
    }
    $(document).ready(() => {
      $(`input[type="submit"]`).click(() => {
        let Cname = $(`input[name="name"]`).val()
        let Caddress = $(`input[name="address"]`).val()
        let Cmobile = $(`input[name="mobile"]`).val()
        $.ajax({
          url: "/basic_new_company_upload",
          method: 'POST',
          data: {
            name: Cname,
            address: Caddress,
            mobile: Cmobile
          },
          success: (data) => {
            $('.result').append(` <div class="container text-center">
            <div class="alert alert-success">
                ${data}
              </div>
        </div>`)
          }
        })
      });

      $(`button[name="delete"]`).click((e) => {
        let cid = e.target.getAttribute('cid')
        alert(cid)
        $(this).parent().parent().remove();
        $.ajax({
          url: "/basic_company_delete",
          method: 'POST',
          data: {
            cid: cid
          },
          success: (data) => {
            $('.result').append(` <div class="container text-center">
            <div class="alert alert-success">
                ${data}
              </div>
            </div>`)
          }
        })
      });
    })
